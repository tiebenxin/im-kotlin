<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    自定义dialog主题-->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="app_txt_base">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/gray_300</item>
    </style>

    <!--头像-->
    <style name="app_img_head">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/ic_info_head</item>
    </style>

    <style name="app_txt_title_2" parent="app_txt_base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="app_btn_green">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <!--纵向分割线-->
    <style name="app_line_portrait">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/gray_200</item>
    </style>

    <style name="app_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_200</item>
    </style>

    <style name="password_edittext">
        <item name="android:maxLength">18</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="app_txt_content_1" parent="app_txt_base">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="app_check_green" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_check_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>